@import './variables.styl'
@import './helpers.styl'
@import './buttons.styl'

html
  height: 100%

body
  height: 100%
  background: background-color
  margin: 0
  padding: 0
  font-family: "Helvetica neue", sans-serif
  font-weight: 200
  font-size: 1.1em
  color: white

h1, h2, h3, h4
  font-weight: 400

a
  color: white

code
  background: log-background-color
  display: block
  padding: 1rem

.app-container
  display: flex
  flex-direction: column;
  min-height: 100vh;

.container
  width: 90%
  max-width: 1000px
  margin: 0 auto

.header
  border-bottom: 2px solid white
  margin-bottom: 2rem
  padding: 1.2rem 0
  font-size: 1.4em

  a
    text-decoration: none
    color: white

.content
  flex-grow: 1
  padding-bottom: 5rem

.footer
  padding 1.2rem 0
  background white
  color background-color
  text-align: center

  a,
  a:visited
    text-decoration: none
    color background-color

@import './dropdown.styl'
